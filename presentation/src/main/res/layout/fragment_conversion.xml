<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dorrin.presentation.conversion.ConversionViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".conversion.ConversionFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/base_currency">

                <AutoCompleteTextView
                    android:id="@+id/sourceCurrencySelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/base_currency" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/swapCurrenciesButton"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="@string/swap_currencies"
                android:src="@drawable/outline_swap_vert_24" />
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/target_currency">

            <AutoCompleteTextView
                android:id="@+id/targetCurrencySelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/target_currency" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.dorrin.presentation.conversion.ConversionView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:rate="@{viewModel.rate}"
            app:sourceShortName="@{viewModel.sourceCurrencyShortName}"
            app:targetShortName="@{viewModel.targetCurrencyShortName}" />

    </LinearLayout>
</layout>