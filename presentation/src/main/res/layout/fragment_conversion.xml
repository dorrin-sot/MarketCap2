<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="viewModel"
            type="com.dorrin.presentation.conversion.ConversionViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        tools:context=".conversion.ConversionFragment">

        <AutoCompleteTextView
            android:id="@+id/sourceCurrencySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source Currency" />

        <AutoCompleteTextView
            android:id="@+id/targetCurrencySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Currency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.presenter.conversionDisplay}"
            android:visibility="@{viewModel.conversionDisplayVisibility}" />
    </LinearLayout>
</layout>